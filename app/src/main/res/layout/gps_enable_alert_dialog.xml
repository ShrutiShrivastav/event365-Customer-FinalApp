<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_margin="@dimen/_16sdp"
        app:cardMaxElevation="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_8sdp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/location_alert_icon"
                android:layout_margin="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caros"
                android:text="@string/enable_gps_alert"
                android:layout_gravity="center"
                android:textSize="@dimen/_14ssp"
                android:gravity="center"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                >


                <Button
                    android:id="@+id/btnQuit"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/rectangle_ripple_effect"
                    android:text="Quit"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_8sdp" />



                <Button
                    android:id="@+id/btnTurnOn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/rectangle_ripple_effect"
                    android:text="Turn On GPS"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>