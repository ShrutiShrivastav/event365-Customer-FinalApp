<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/hostRootContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:context=".userinfo.activity.HostProfileActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ivBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="backBtnOnClick"
                android:padding="@dimen/_10sdp"
                app:srcCompat="@drawable/back_arrow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivBackBtn"
                android:layout_alignBottom="@+id/ivBackBtn"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/caros"
                android:gravity="center_vertical"
                android:text="@string/profile"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivBackBtn"
                android:layout_margin="@dimen/_16sdp"
                android:background="@drawable/login_round_container"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollIndicators="none"
                    android:layout_marginBottom="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/userImgContainer"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:background="@drawable/profile_img_ring">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivShowHostUserImg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_5sdp"
                                android:src="@drawable/image" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvShowHostName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/user_name"
                            android:textColor="@color/colorSmoothBlack"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/ivShowHostAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="@string/address"
                            android:textSize="@dimen/_10ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@color/little_dark_white"
                            android:padding="@dimen/_10sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvShowHostAbout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_14ssp"
                                android:fontFamily="@font/caros"
                                android:maxLines="2"
                                android:ellipsize="end" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:background="@color/color_too_light_gray"
                                />


                            <TextView
                                android:id="@+id/tvShowHostPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_14ssp"
                                android:fontFamily="@font/caros"
                                android:maxLines="1"
                                android:ellipsize="end"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:background="@color/color_too_light_gray"
                                />


                            <TextView
                                android:id="@+id/tvShowHostEmailId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_14ssp"
                                android:fontFamily="@font/caros"
                                android:maxLines="1"
                                android:ellipsize="end"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:background="@color/color_too_light_gray"
                                />

                            <TextView
                                android:id="@+id/tvShowHostUrl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_14ssp"
                                android:fontFamily="@font/caros"
                                android:maxLines="1"
                                android:ellipsize="end"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:background="@color/color_too_light_gray"
                                />


                            <TextView
                                android:id="@+id/tvShowHostCity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_14ssp"
                                android:fontFamily="@font/caros"
                                android:maxLines="1"
                                android:ellipsize="end"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:background="@color/color_too_light_gray"
                                />

                            <TextView
                                android:id="@+id/tvShowHostState"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_14ssp"
                                android:fontFamily="@font/caros"
                                android:maxLines="1"
                                android:ellipsize="end"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:background="@color/color_too_light_gray"
                                />
                            <TextView
                                android:id="@+id/tvShowHostZip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_14ssp"
                                android:fontFamily="@font/caros"
                                android:maxLines="1"
                                android:ellipsize="end"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:background="@color/color_too_light_gray"
                                />




                            <Button
                                android:id="@+id/btnChat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:layout_marginBottom="@dimen/_30sdp"
                                android:background="@drawable/rectangular_btn_ripple_effect"
                                android:fontFamily="@font/caros_medium"
                                android:onClick="ChatOnClick"
                                android:text="@string/chat"
                                android:textAllCaps="false"
                                android:textColor="@color/color_too_light_gray" />


                        </LinearLayout>


                    </LinearLayout>


                </androidx.core.widget.NestedScrollView>
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</layout>